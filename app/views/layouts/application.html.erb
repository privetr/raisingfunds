					<% end %>

					<h4 id="website_url" class="white col-xs-4 col-xs-push-3 roboto-regular" style="padding-top:10px;"><b><%= t("application_title_navbar") %></b></h4>

					<%= link_to_unless I18n.locale == :en, image_tag('en.svg', style:"height:25px; width:30px; margin-top:15px; "), locale: :en %>
