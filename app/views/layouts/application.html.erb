<!DOCTYPE html>
<html>
<head>
  <title>runforacause.fr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'exporting.js', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'highcharts.js', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery.plugin.js', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'jquery.countdown.js', 'data-turbolinks-track' => true %>
