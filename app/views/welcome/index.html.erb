<div class="container">
	<h1 class="deep-orange">Donations</h1>

	<div class="bs-callout bs-callout-yellow row">
		<div class="row">
			<div class="col-lg-12">
				<%= link_to "Make a new donation's promise", new_fund_path, class: "bold btn btn-default yellow-bg white uppercase btn-yellow-hover col-lg-4 col-lg-push-4" %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<p><h3 class="deep-orange"> Donation sum per kilometer : <%= number_to_human(@donation_sum_dong) %> (Dongs) </h3></p>
				<p><h3 class="deep-orange"> Donation sum per kilometer : <%= number_to_human(@donation_sum_euro) %> (EURO - USD) </h3></p>
			</div>
		</div>

		<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

		<div class="row">
			<div class="col-lg-12">
				<h3 class="deep-orange"> List of donations :</h3>
				<% @funds.each do |fund| %>
					<div class="row" style="margin:0px; padding:0px;">
						<div class="col-lg-6 content-fund-description" style="margin:5px; padding:10px;">
							<p> <span class="yellow-dark bold"><%= fund.firstname %> <%= fund.lastname %></span> : <%= fund.donation_value %>
							<% if fund.devise == "euro" %>
								Euros
							<% elsif fund.devise == "usd" %>
								USD
							<% else fund.devise == "dong" %>
								Dongs
							<% end %> 
							 per Km
								<span style="float: right;"> (<%= fund.created_at.strftime("%d %b %y") %>)</span> 
							</p>
							<p><i><%= fund.comment %></i></p>
						</div>
					</div>
			  	<% end %>
			</div>
		</div>
	</div>
	

</div>

<script type="text/javascript">
	$('#countdownContainer').countdown({until: new Date(2015, 10 - 1, 22, 00, 00, 00, 000)});	
