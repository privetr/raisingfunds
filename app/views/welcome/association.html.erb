<%
meta title: "Runforacause.fr - Charity",
     description: "Nicolas Privet's website, to raise fund for charity organization Les Enfants Du Dragon. Diagonale des fous.",
     keywords: %w(Nicolas Privet Diagonale fous Enfants dragon donation Charity)
%>

<!-- for Translating large contents -->
<%= render :partial => 'association_contents' %>

<div class="container roboto-regular" style="margin-top: 50px;">
	<div class="bs-callout bs-callout-yellow row">
		<div class="col-lg-12">
			<h1 class="secondarycolor" style="margin-bottom:30px;"><%= t("whois_charity_title") %></h1>
		</div>
		
		<div class="col-lg-6 col-lg-push-3">
			<%= image_tag "contact/enfantsdragon.jpg", class:"img-responsive" %>
		</div>
	</div>

	<div class="col-lg-12" style="margin-top:20px;">

		<div class="row">
			<div class="col-lg-12">
				<h3><b class="reddark"><%= t("name_enfants_dragon") %></b></h3><br>
			</div>
		</div>
		
		<div class="row" style="font-size:16px;">
			<div class="col-lg-12">

				<%= yield :content_association %>

				<div class="row" style=" margin-bottom:20px;">
					<div class="col-lg-6 col-lg-push-3">
						<%= image_tag "asso/asso2.jpg", class:"img-responsive" %>
					</div>
				</div>

				<%= yield :content_contact_association %>

			</div>
		</div>

		<div class="row" style="margin-top:20px;">
			<div class="col-lg-4 col-lg-push-4">
				<%= image_tag "asso/asso1.jpg", class:"img-responsive" %>
			</div>
		</div>



	</div>

	<div class="col-lg-12">
		<div class="bs-callout bs-callout-yellow row">
			<div class="col-lg-6">
				<a href="http://lesenfantsdudragon.com/" target="_blank"><b class="secondarycolordark"><i class="glyphicon glyphicon-share-alt"></i> Official website</b></a><br>
			</div>
			<div class="col-lg-6">
				<a href="https://www.facebook.com/groups/Enfantsdudragon/" target="_blank"><b class="secondarycolordark"><i class="glyphicon glyphicon-share-alt"></i> <%= t("facebook_page") %></b></a><br>
			</div>
		</div>
	</div>

</div>

