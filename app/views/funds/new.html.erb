
<div class="container roboto-regular" style="margin-top: 50px;">

	<div class="bs-callout bs-callout-yellow row">

		<h1 class="deep-orange text-center">Make a new donation's promise by Kilometer ran by Nicolas </h1>

		<%= bootstrap_form_for(@fund) do |f| %>

			<div class="row">
				<div class="col-lg-6">
					<%= f.text_field :firstname %>
				</div>
				<div class="col-lg-6">
					<%= f.text_field :lastname %>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-6">
					<%= f.email_field :email %>
				</div>
				<div class="col-lg-6">
					<%= f.number_field :donation_value %>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<%= f.text_area :comment %>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<%= f.submit "Save", class: "bold btn btn-default yellow-bg white uppercase btn-yellow-hover col-lg-4 col-lg-push-4" %>
				</div>
			</div>

		  	
		<% end %>

	</div>
</div>